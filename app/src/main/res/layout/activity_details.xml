<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/book"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="239dp"
        android:layout_height="247dp"
        android:layout_marginTop="50dp"
        android:contentDescription="image"
        android:onClick="selectImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/click" />

    <EditText
        android:id="@+id/ArteditText"
        android:layout_width="271dp"
        android:layout_height="62dp"
        android:layout_marginTop="40dp"
        android:background="#F0E4D8"
        android:ems="10"
        android:hint="Enter Art Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:background="#F0E4D8"
        android:id="@+id/NameeditText"
        android:layout_width="271dp"
        android:layout_height="62dp"
        android:layout_marginTop="110dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter Artist Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:background="#F0E4D8"
        android:id="@+id/YeareditText"
        android:layout_width="271dp"
        android:layout_height="62dp"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter Art Year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/Savebutton"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#5C8DFE"
        android:onClick="save"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/YeareditText" />

</androidx.constraintlayout.widget.ConstraintLayout>